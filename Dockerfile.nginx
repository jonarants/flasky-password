FROM nginx:stable-perl

RUN addgroup -S nonroot \
    && adduser -S nonroot -G nonroot
# Switch to nonroot user
USER nonroot


COPY --chown=nonroot:nonroot NGINX/default.conf /etc/nginx/conf.d/default.conf
COPY --chown=nonroot:nonroot NGINX/passmanager.conf /etc/nginx/conf.d/passmanager.conf
COPY --chown=nonroot:nonroot NGINX/index.html /usr/share/nginx/html/index.html

# Switch to nonroot user
USER nonroot


EXPOSE 80
EXPOSE 8080